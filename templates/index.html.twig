<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Attendance Manager</title>
    <style> table {
	border: 1px solid;
	}
	
	tr, td, th {
	border: 1px solid;
	padding: .5em;
	}
	</style>
	<link rel="stylesheet" href="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css" />
	<script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
	<script src="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
</head>

<body>

<!-- Start of first page: #one -->
<div data-role="page" id="one">
	<div role="main" class="ui-content">
	<div data-role="header">
		<h1>Attendance Manager</h1>        		
	</div><!-- /header -->
	
	<h1>Attendance Manager</h1>
	    <h2>Login</h2>
	    Username <input type="text" name="username" id="username" value="">
        Password <input type="password" name="pass" id="pass" value="">
        <button class="ui-btn" id="loginButton">Submit</button>
	</div><!-- /content -->
</div><!-- /page one -->

<div data-role="page" id="dashboard">
	<div role="main" class="ui-content">
	<div data-role="header">
		<h1>Dashboard</h1>        		
	</div><!-- /header -->
	
    <fieldset class="ui-grid-a">
	<div class="ui-block-a"><button type="button" id="allClock" data-theme="a">All Clocking Data</button></div>
	<div class="ui-block-b"><button type="button" id="today" data-theme="a">Today's Clocking Data</button></div>	   
    </fieldset>
	
	</div><!-- /content -->
</div><!-- /page one -->

<div data-role="page" id="viewAll">
	<div role="main" class="ui-content">
	<div data-role="header">
		<h1>View All Clockings</h1>        		
	</div><!-- /header -->
	
	<div id="viewTable">
	
	</div>
	
	</div><!-- /content -->
</div><!-- /page one -->
<script>
//login function
$( "#loginButton" ).click(function() {
    var uname = $( "#username" ).val();    
      
    var pw = $( "#pass" ).val();      
      
    $.post( "/functions", { type: "login", username:uname, password:pw})
    .done(function( data ) {        
        alert(data);
        window.location="/index#dashboard";
        
    });  
});

//view all clocking data
$( "#allClock" ).click(function() {      
    $.post( "/functions", { type: "allClock"})
    .done(function( data ) {      
		window.location="/index#viewAll";
		$( "#viewTable" ).html(data);	
    });  
});

//view today's clocking data
$( "#today" ).click(function() {      
    $.post( "/functions", { type: "today"})
    .done(function( data ) {      
		window.location="/index#viewAll";
		$( "#viewTable" ).html(data);	
    });  
});

</script>
</body>
</html>